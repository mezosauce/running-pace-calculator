@page "/"

<PageTitle>Pace Calculator</PageTitle>


<MudGrid Class="d-flex justify-content-center">

        @* Non-Mobile Viewports *@
        <MudHidden Breakpoint="Breakpoint.Xs">

            <MudItem xs="12">
                <MudText Typo="Typo.h2"
                         Align="Align.Center"
                         Style="margin-top: 30px; margin-bottom: 50px">
                🏃‍♂ Running Pace Calculator 🏃‍♂
                </MudText>
            </MudItem>

            <MudItem xs="6">

                <MudText Typo="Typo.h3"
                         Style="margin-top: 50px; margin-bottom: 25px;">

                    @($"Minutes")

                </MudText>

                <MudNumericField T="int"
                                 Value="_minutes"
                                 Variant="Variant.Outlined"
                                 Min="0"
                                 Max="59"
                                 ValueChanged="(x) => OnPaceMinutesChanged(x)" />

            </MudItem>

            <MudItem xs="6">

                <MudText Typo="Typo.h3"
                         Style="margin-top: 50px; margin-bottom: 25px;">

                    @($"Seconds")

                </MudText>

                <MudNumericField T="int"
                                 Value="_seconds"
                                 Variant="Variant.Outlined"
                                 Min="0"
                                 Max="59"
                                 ValueChanged="OnPaceSecondsChanged" />

            </MudItem>

            <MudItem xs="12">

                <MudText Typo="Typo.h3"
                        Align="Align.Center"
                        Style="margin-top: 80px;">

                    @($"Race Distance")

                </MudText>

                <MudSlider TickMarks
                            T="double"
                            Value="@_distanceSliderValue"
                            Size="Size.Large"
                            Color="Color.Primary"
                            Step="12.5"
                            TickMarkLabels="@_runningDistanceLabels"
                            Style="margin-top: 45px;"
                            ValueChanged="(x) => OnRaceDistanceChanged(x)" />

             </MudItem>


             <MudItem xs="1" />

            <MudItem xs="10">

                <MudText Typo="Typo.h3"
                        Align="Align.Center"
                        Style="margin-top: 150px;">

                    @($"Your race time would be:")

                </MudText>

                <MudText Typo="Typo.h3"
                        Align="Align.Center"
                        Style="margin-top: 50px;">

                    @(_raceTime.HasValue ? 
                    $"{_raceTime.Value.Hour} hours, {_raceTime.Value.Minute} minutes, {_raceTime.Value.Second} seconds" 
                    : "--:--")

                </MudText>

            </MudItem>

        </MudHidden>

        @* Mobile Viewports *@
        <MudHidden Breakpoint="Breakpoint.SmAndUp">

            <MudItem xs="12">
                <MudText Typo="Typo.h5"
                         Align="Align.Center"
                         Style="margin-top: 30px;">
                🏃‍♂ Running Pace Calculator 🏃‍♂
                </MudText>
            </MudItem>

            <MudItem xs="6">

                <MudText Typo="Typo.h6"
                         Style="margin-top: 25px; margin-bottom: 25px;">

                    @($"Minutes")

                </MudText>

                <MudNumericField T="int"
                                 Value="_minutes"
                                 Variant="Variant.Outlined"
                                 Min="0"
                                 Max="59"
                                 ValueChanged="(x) => OnPaceMinutesChanged(x)" />

            </MudItem>

            <MudItem xs="6">

                <MudText Typo="Typo.h6"
                         Style="margin-top: 25px; margin-bottom: 25px;">

                    @($"Seconds")

                </MudText>

                <MudNumericField T="int"
                                 Value="_seconds"
                                 Variant="Variant.Outlined"
                                 Min="0"
                                 Max="59"
                                 ValueChanged="OnPaceSecondsChanged" />

            </MudItem>

            <MudItem xs="12">

                <MudText Typo="Typo.h6"
                        Align="Align.Center"
                        Style="margin-top: 30px;">

                    @($"Race Distance")

                </MudText>

                <MudSlider TickMarks
                            T="double"
                            Value="@_distanceSliderValue"
                            Size="Size.Large"
                            Color="Color.Primary"
                            Step="12.5"
                            TickMarkLabels="@_runningDistanceLabels"
                            Style="margin-top: 30px;"
                            ValueChanged="(x) => OnRaceDistanceChanged(x)" />

             </MudItem>


             <MudItem xs="1" />

            <MudItem xs="10">

                <MudText Typo="Typo.h6"
                        Align="Align.Center"
                        Style="margin-top: 50px;">

                    @($"Your race time would be:")

                </MudText>

                <MudText Typo="Typo.h6"
                        Align="Align.Center"
                        Style="margin-top: 20px;">

                    @(_raceTime.HasValue ?
                        $"{_raceTime.Value.Hour} hours, {_raceTime.Value.Minute} minutes, {_raceTime.Value.Second} seconds"
                        : "--:--")

                </MudText>

            </MudItem>

            <MudItem xs="1" />


        </MudHidden>
        
</MudGrid>